<?xml version="1.0" encoding="UTF-8"?>
<rows>
<% for t in @transactions %>
  <row id="<%= t.id %>">
    <cell></cell>
    <cell><![CDATA[<%= t.number %>]]></cell>
    <cell><%= t.date %></cell>
    <cell><![CDATA[<%= t.payee_text %>]]></cell>
    <cell><%= number_to_currency0(t.payment, :unit => '$', :separator => '.', :delimiter => ',') %></cell>
    <cell><%= number_to_currency0(t.deposit, :unit => '$', :separator => '.', :delimiter => ',') %></cell>
    <cell>
      <% if t.running_balance < 0 -%>
      <![CDATA[
      <span style="color:#cc0000"><%= number_to_currency(t.running_balance, :unit => '$', :separator => '.', :delimiter => ',') %></span>
      ]]>
      <% else %>
      <%= number_to_currency(t.running_balance, :unit => '$', :separator => '.', :delimiter => ',') %>
      <% end %>
    </cell>
    <cell><![CDATA[&nbsp;]]></cell>
  </row>
<% end %>
</rows>